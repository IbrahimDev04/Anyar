
@model List<GetServiceAdminVM>
<div class="table-responsive">
    <h4 class="fw-semibold mb-0 ">Slider</h4>
    <table class="table table-bordered text-nowrap mb-0 align-middle">
        <a asp-action="Create" type="button" class="btn float-end btn-outline-primary m-1">Create</a>
        <thead class="text-dark fs-4">
            <tr>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Id</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Title</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Subtitle</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Icon</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Create Time</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Update Time</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Action</h6>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td class="border-bottom-0">
                        <h6>@i.Id</h6>
                    </td>
                    <td class="border-bottom-0">
                        <h6>@i.Title</h6>
                    </td>
                    <td class="border-bottom-0">
                        <h6>@i.Subtitle</h6>
                    </td>
                    <th class="border-bottom-0">
                        <i style="font-size: 25px; color: darkorange;" class="fa-solid fa-@i.Icon"></i>
                    </th>
                    <td class="border-bottom-0">
                        <h6>@i.CreatedTime</h6>
                    </td>
                    <td class="border-bottom-0">
                        <h6>@i.UpdatedTime</h6>
                    </td>
                    <td class="border-bottom-0">
                        <a asp-action="Delete" asp-route-id="@i.Id" type="button" class="btn btn-outline-danger m-1">Delete</a>
                        <a asp-action="Update" asp-route-id="@i.Id" type="button" class="btn btn-outline-success m-1">Update</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>